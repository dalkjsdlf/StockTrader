<included>
    <!--<include resource="org/springframework/boot/logging/logback/console-appender.xml"/>-->

    <include resource="logback/logback-variables.properties"/>
    <property name="LOG_LEVEL" value="${loglevel:-INFO}" />

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${LOG_LEVEL}</level>
        </filter>
        <layout>
            <pattern>
                %clr([CONSOLE]){faint} %highlight([%-5level]){cyan} %clr(%d{yyyy-MM -dd HH:mm:ss}){green} [%thread] %clr([%logger:%line]){orange} - %msg\n
            </pattern>
        </layout>
    </appender>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>
            ${LOG_DIR}/request.log
        </file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>
                logs/request-%d{yyyy-MM-dd}_%i.log
            </fileNamePattern>
            <maxFileSize>1MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                ${LOG_PATTERN}
            </pattern>
            <outputPatternAsHeader>true</outputPatternAsHeader>
        </encoder>
    </appender>
    <appender name="JSON_FILE" class="ch.qos.logback.core.FileAppender">
        <file> logs/app.log</file>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
    </appender>

    <!-- 기본 LOGLEVEL INFO -->
    <root level="DEBUG">
        <appender-ref ref="JSON_FILE"/>
    </root>
</included>